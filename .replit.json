{
  "run": {
    "language": "bash",
    "onBoot": "",
    "command": "bash discord_bot.sh"
  },
  "env": [
    "DISCORD_TOKEN",
    "BOT_APPLICATION_ID", 
    "HOME_GUILD_ID",
    "MONGODB_URI"
  ],
  "works": true,
  "deploymentTarget": "cloudrun",
  "languages": {
    "Python": {
      "compilers": ["python3"],
      "lsp": ["python-lsp-server", "pylsp"]
    }
  },
  "workflows": {
    "discord_bot": {
      "name": "Discord Bot",
      "installCommand": "",
      "startCommand": "bash discord_bot.sh",
      "restartAt": "10:00",
      "restartPolicy": {
        "delay": "12h",
        "maxAttempts": -1
      }
    }
  }
}